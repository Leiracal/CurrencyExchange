@model IEnumerable<CurrencyExchange.Models.Order>

@{
    ViewData["Title"] = "Orders";
}
<p>@ViewData["Message"]</p>

<p>@ViewData["txProcessed"]</p>

<h1>Orders</h1>

<p>This page displays all orders in the Marketplace. Your own orders can be seen in the Dashboard.</p>

<p>
    <a asp-action="Create">Create New Order</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Type)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Quantity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Remaining)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CreatedAt)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Type.Type)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Quantity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Remaining)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status.Status)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreatedAt)
            </td>
            <td>
                
                <a asp-action="Details" asp-route-id="@item.OrderID">Details</a>
                @* <a asp-action="Delete" asp-route-id="@item.OrderID">Delete</a> *@
            </td>
        </tr>
}
    </tbody>
</table>
